<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ActivityAbout">

    <include
        android:id="@+id/appbar_container"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="@dimen/grid_4"
                android:paddingRight="@dimen/grid_4"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/grid_2"
                android:layout_marginRight="@dimen/grid_2"
                android:text="Transport Monitoring System"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/grid_12"
                android:layout_marginLeft="@dimen/grid_2"
                android:layout_marginRight="@dimen/grid_2"
                android:text="for School Kids Safety"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/grid_4"
                android:layout_marginLeft="@dimen/grid_4"
                android:layout_marginRight="@dimen/grid_4"
                android:textColor="?android:attr/textColorPrimary"
                android:gravity="center"
                android:paddingBottom="@dimen/grid_3"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/about_app"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <View style="@style/DividerView" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="@dimen/grid_4"
                android:paddingRight="@dimen/grid_4"
                android:paddingTop="@dimen/grid_4"
                android:src="@drawable/org_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/grid_4"
                android:layout_marginLeft="@dimen/grid_4"
                android:layout_marginRight="@dimen/grid_4"
                android:gravity="center"
                android:paddingBottom="@dimen/grid_4"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/grid_4"
                android:text="@string/about_project"
                android:textColor="?android:attr/textColorPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <View style="@style/DividerView" />

            <Button
                android:id="@+id/btn_contact"
                style="@style/MaterialButtonStyle.Stack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="buttonClick"
                android:text="Contact us"/>

            <Button
                android:id="@+id/btn_licenses"
                style="@style/MaterialButtonStyle.Stack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="buttonClick"
                android:text="Open source license"/>

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/shadow_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar_container"/>

</RelativeLayout>

