<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/grid_18" >

    <ImageView
        android:layout_marginLeft="@dimen/grid_8"
        android:layout_marginRight="@dimen/grid_8"
        android:layout_width="@dimen/grid_4"
        android:layout_gravity="center_vertical"
        android:src="@drawable/timeline_circle"
        android:layout_height="@dimen/grid_4"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_marginLeft="@dimen/grid_19"
        android:layout_marginStart="@dimen/grid_19"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/grid_6"
        android:layout_marginEnd="@dimen/grid_6"
        android:layout_gravity="center_vertical|end"
        android:layout_height="wrap_content"/>

</FrameLayout>